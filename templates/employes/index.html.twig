{% extends 'base.html.twig' %}

{% block title %}Page Liste{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="text-center my-3">Liste des employes</h1>

        
    <div class="container mt-5">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Poste</th>
                <th>Adresse</th>
                <th>Salaire</th>
                <th>Date de naissance</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
         {% for employe in employes %}

                <tr>
                    <td>{{ employe.id }}</td>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.prenom }}</td>
                    <td>{{ employe.telephone }}</td>
                    <td>{{ employe.email }}</td>
                    <td>{{ employe.poste }}</td>
                    <td>{{ employe.adresse }}</td>
                    <td>{{ employe.salaire }}</td>
                    <td>{{ employe.datedenaissance|date('d/m/Y') }}</td>

                    <td>
                        {# <a href="{{ path('blog_show', {id: article.id} ) }}" class="text-info">voir</a> #}
                        <a href="{{ path("modifier", {id: employe.id}) }}" class="text-light mx-2"><i class="bi bi-pencil-square"></i></a>

                        <a href="{{ path('supprimer', {id: employe.id}) }}" class="text-light"><i class="bi bi-trash3-fill"></i></a>
                        
                    </td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
</div>

    



{% endblock %}
